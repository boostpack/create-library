{
  "name": "@boostpack/create-library",
  "version": "1.0.0-alpha.3",
  "description": "Build scripts and dependencies for Boostpack TypeScript libraries",
  "keywords": [
    "typescript",
    "build",
    "scripts",
    "boostpack",
    "tooling"
  ],
  "author": "Timur Popov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boostpack/create-library.git"
  },
  "homepage": "https://github.com/boostpack/create-library#readme",
  "bugs": {
    "url": "https://github.com/boostpack/create-library/issues"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "create-library": "./bin/create-library.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./config/rollup": "./dist/configs/rollup.config.js",
    "./config/jest": "./dist/configs/jest.config.js",
    "./config/eslint": "./dist/configs/eslint.config.js",
    "./config/commitlint": "./dist/configs/commitlint.config.js",
    "./config/tsconfig": "./dist/configs/tsconfig.json",
    "./config/tsconfig.build": "./dist/configs/tsconfig.build.json",
    "./config/tsconfig.test": "./dist/configs/tsconfig.test.json",
    "./renovate.config": "./dist/renovate.config.js"
  },
  "files": [
    "bin",
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json --noEmit && rollup -c rollup.config.mjs",
    "prebuild": "rimraf dist",
    "postbuild": "node ./scripts/copy-configs.js",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:ci": "jest --coverage --reporters default --reporters github-actions",
    "lint": "eslint .",
    "lint:ci": "eslint .",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "docs": "echo 'ðŸ“– API documentation generation not implemented yet'",
    "docs:serve": "echo 'ðŸš€ Documentation server not implemented yet'",
    "docs:clean": "echo 'ðŸ§¹ Documentation cleanup not implemented yet'",
    "publish": "semantic-release"
  },
  "dependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "@inquirer/prompts": "^7.8.6",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node22": "^22.0.2",
    "@tsconfig/recommended": "^1.0.10",
    "@tsconfig/strictest": "^2.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "cross-spawn": "^7.0.3",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eta": "^3.4.3",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.3",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-node-externals": "^8.1.1",
    "semantic-release": "^24.2.9",
    "ts-jest": "^29.4.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "^24.5.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
